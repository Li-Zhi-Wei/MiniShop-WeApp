@import "../tpls/base.wxss";
.detail-container {
  background-color:#F9F9F9
}
.detail-header-box,.detail-bottom-box{
  background-color: #fff;
  width: 100vw;
}
.detail-topic-img{
  display: flex;
  justify-content: center;
  width: 750rpx;
  height: 750rpx;
}
.detail-topic-img image{
  width: 100%;
  height: 100%;
}

/*价格和名称*/
.basic-info-box{
  padding: 15rpx 0;
  color: #454552;
  text-align: left;
  margin: 0 0 0 20rpx;
}
.basic-info-box>view{
  margin: 20rpx 0 0 0;
}
/* .basic-info-box .title{
  float:left;
  align-items:flex-start;
  justify-content:left;
} */
.basic-info-box .stock-no{
  color:#E54D42;
  font-size: 24rpx;
  border: 1px solid #E54D42;
  border-radius: 30rpx;
  width:80rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.basic-info-box .name{
  font-size: 40rpx;
}
.basic-info-box .price{
  font-size: 38rpx;
  color:#E54D42;
  display: inline-flex;
  font-weight: bold;
}
.basic-info-box .summary{
  font-size: 28rpx;
  color: #999;
  margin: 0;
}
.basic-info-box .show-price{
  font-size: 28rpx;
  color: #999;
  display: inline-flex;
  text-decoration:line-through;
  margin-left: 10rpx;
  font-weight: bold;
}
.basic-info-box .sale{
  font-size: 28rpx;
  /* color: #999; */
  margin-left: 6rpx;
}

/*商品详情*/
.detail-bottom-box{
  margin-top: 30rpx;
  margin-bottom: 100rpx;
}
.tabs-box{
  height: 90rpx;
  width: 750rpx;
  display: flex;
  justify-content: space-between;
}
.tabs-item{
  width: 50%;
  color: #C7C7CB;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #D0D0D7;
}
.tabs-item.selected{
  /*color: #AB956D;*/
  color: rgba(171,149,109,.8);
  /*border-bottom: 2px solid #AB956D;*/
  border-bottom: 2px solid rgba(171,149,109,.8);
}
/* .product-detail-box{
  
} */
.product-detail-imgs image{
  width: 100%;
  float: left;
}
.product-detail-properties{
  min-height: 50vh;
}

.properties-item{
  display: flex;
  /* margin: 25rpx 0; */
  font-size:30rpx;
}.properties-item:first-child{
  margin-top: 60rpx;
}
.properties-item:last-child >view{
  border-bottom: 1rpx solid #D0D0D7;
}
.properties-item>view{
  line-height: 50rpx;
  /* border: 1rpx solid #D0D0D7; */
  text-align: center;
  border-top: 1rpx solid #D0D0D7;
  border-left: 1rpx solid #D0D0D7;
}
.properties-name{
  width: 200rpx;
  color:#808080;
  margin-left: 60rpx;
  align-items: center;
}
.properties-detail{
  flex:1;
  color: #333;
  margin-right: 60rpx;
  border-right: 1rpx solid #D0D0D7;
}

/* 规格选择 */
.spec-popup-box{
  position: relative;
	padding: 0;
  width: 100vw;
}
.spec-product-box{
  display: flex;
	align-items: flex-end;
	font-size: 24rpx;
	padding-bottom: 30rpx;
}
.spec-popup-img{
  height: 200rpx;
	width: 200rpx;
	border-radius: 15rpx;
	display: block;
  margin: 30rpx 0 0 30rpx;

}
.spec-product-price{
  padding-left: 20rpx;
	padding-bottom: 8rpx;
}
.spec-price{
  color: #ff201f;
	font-size: 36rpx;
  font-weight: bold;
}
.spec-name{
  font-size: 24rpx;
	line-height: 24rpx;
	padding-top: 12rpx;
	color: #999;
}
.spec-box{
  height: 600rpx;
	font-size: 26rpx;
  padding: 0 30rpx 100rpx 30rpx;
	box-sizing: border-box;
}
.spec-attr-title{
  padding: 10rpx 0;
	color: #333;
  font-weight: bold;
}
.spec-attr-box{
  font-size: 0;
	padding: 20rpx 0;
}
.spec-attr-item{
  max-width: 100%;
  min-width: 200rpx;
  height: 64rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: #f7f7f7;
  padding: 0 26rpx;
  box-sizing: border-box;
  border-radius: 32rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
}
.spec-attr-item-active{
  border: 1px solid #E54D42;
  color: #E54D42;
}
.spec-attr-box .disabled{
  color: #999;
}
.spec-number-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0 30rpx 0;
  box-sizing: border-box;
  font-weight: bold;
}
.number-box{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.spec-item-counts{
  width:220rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
}
.spec-item-counts>view{
  display: flex;
  justify-content: center;
  align-items: center;
}
.spec-item-counts .btns{
  color: #454553;
  font-size: 40rpx;
  padding: 0 30rpx;
}
.spec-item-counts .btns.disabled{
  color: #D5D5DB;
}
.spec-item-counts .counts{
  color: #454553;
  font-size: 28rpx;
  padding-top:9rpx;
  box-sizing: border-box;
}
.spec-operation{
  width: 100%;
  height: 100rpx;
  /* box-sizing: border-box; */
  background: rgba(255, 255, 255, 0.98);
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 10;
  bottom: 0;
  left: 0;
  padding-bottom: env(safe-area-inset-bottom);
	padding-top: 0;
	/* justify-content: center; */
}
.spec-btn{
  flex: 1;
  max-width: 50%;
  height: 100%;
  color: #fff;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.spec-btn.add{
  background: #FFAA01;
}
.spec-btn.buy{
  background: #FF2805;
}
.spec-icon-close{
  border-radius: 16px;
  position: absolute;
	top: 30rpx;
	right: 30rpx;
  color: #999;
  font-size:40rpx;
  padding: 20rpx 20rpx;
}
/*规格选择模态框*/
.modal{position:fixed; top:0; right:0; bottom:0; left:0; z-index:100;}
.modal-cancel{position:absolute; z-index:200; top:0; right:0; bottom: 0; left:0; background:rgba(0,0,0,0.3);}
.bottom-dialog-body{width:100%; position:absolute; z-index:300; bottom:0; left:0;background:#dfdede;}
/*动画前初始位置*/
.bottom-positon{-webkit-transform:translateY(100%);transform:translateY(100%);}
/* 底部弹出框 */
.Mselect{
  margin-bottom: 20rpx;
}
.Mselect view{
  padding: 26rpx 0;
  background: #fff;
}
.Mselect view:not(:last-of-type){
  border-bottom: 1px solid #dfdede;
}
.Mcancel{
  background: #fff;
  padding: 26rpx 0;
}
