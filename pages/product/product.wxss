/* 底部操作栏 */
.footer{
  width: 100%;
  height: 100rpx;
  /* box-sizing: border-box; */
  background: rgba(255, 255, 255, 0.98);
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 10;
  bottom: 0;
  left: 0;
  padding-bottom: env(safe-area-inset-bottom);
}
.footer::before{
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  border-top: 1rpx solid #eaeef1;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.footer-left{
  display: flex;
	align-items: center;
  width: 35%;
  height: 100%;
  overflow: hidden;
  /* padding: 10rpx 0 0 0; */
}
.footer-left-item{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  flex-direction: column;
  height: 100%;
  width: 33.3333%;
  padding: 30rpx 0 0 0;
	/* position: relative; */
}
.footer-left-item image{
  height: 50rpx;
  width: 50rpx;
}
.footer-left-item text{
  font-size: 22rpx;
  color: #333;
  /* transform: scale(0.9);
	transform-origin: center center; */
}
.footer-left-item .cart-number{
  font-size: 16rpx;
  background-color: #E54D42;
  color: white;
  position: absolute;
  right: 500rpx;
  top: 12rpx;
  height: 26rpx;
  width: 26rpx;
  line-height: 30rpx;
  border-radius: 30rpx;
  text-align: center;
}
.footer-right{
  height: 100rpx;
		/* box-sizing: border-box; */
	padding-top: 0;
  display: flex;
	align-items: center;
	justify-content: center;
  width: 65%;
}
.footer-right-item{
  height: 100rpx;
  width:100%;
}
.kefu{
  width:87rpx;
  height: 100%;
  background: none;
  border: none;
  position: absolute;
  padding: 0;
  left:0;
  top:0;
}
button::after {
  border: none;
}